{
  "detection": {
    "patterns": [
      "API_KEY",
      "SECRET",
      "PASSWORD",
      "TOKEN",
      "CREDENTIAL",
      "PRIVATE_KEY"
    ],
    "env_vars": {
      "block_hardcoded": true,
      "require_env_file": true
    }
  },
  "scanning": {
    "enabled": true,
    "scan_on_commit": true,
    "scan_on_pr": true,
    "fail_on_detection": true
  },
  "allowed_patterns": [
    "APP_ENV=development",
    "PORT=3000"
  ],
  "blocked_patterns": [
    ".*:.*?[A-Za-z0-9+/=]{20,}",
    "sk-.*",
    "ghp_.*",
    "AKIA.*"
  ],
  "remediation": {
    "auto_remove": false,
    "suggest_env_var": true,
    "alert_user": true
  }
}

